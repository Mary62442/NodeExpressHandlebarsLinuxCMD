<section class = "datavis-presentation">
    <h1>Data Visualisation</h1>

</section>

<section id = "quote-container" class = "quote-container">
	<div id="quote" class ="quote">
		<blockquote id="blockquote">
		{{{quote}}}
		</blockquote>
		<h3 id = "quoter">{{{quoter}}}</h3>
	</div>
	<button title="Get a random quote!" id="change-quote" ><i class="fa fa-random"></i>

</button>
</section>

<section class = "google-books-container">	
	<div class = "the-book">
		<div class ="book-background">
			<div style = "background-image: linear-gradient(to left, rgba(255,255,255,0.1), rgba(255,255,255,0.1)), url('{{waves.imageLinks.small}}')"></div>
		</div>
		
		<div class = "the-book-description">
			<h1>{{waves.title}}</h1>
			<span>{{waves.authors}}</span>
			<p>{{waves.description}}</p>
			<div class = "book-data-flex">
				<div>
					<h3>Categories:</h3>
					<ul>
					{{#each waves.categories}}
						<li>{{this}}</li>
					{{/each}}
					</ul>
				</div>
				<div>
					<p>Publisher: {{waves.publisher}}</p>
					<p>Page count: {{waves.pageCount}}</p>
					<p>ISBN: {{waves.industryIdentifiers.0.identifier}}</p>
				</div>
				
				
			</div>
			
		</div>

		<img src="{{waves.imageLinks.small}}"/>
		
	</div>


</section>